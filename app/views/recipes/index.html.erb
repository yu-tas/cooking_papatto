<p id="notice"><%= notice %></p>

<h1>レシピ一覧</h1>

<table>
  <thead>
    <tr>
      <th>レシピ名</th>
      <th>作り方</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @recipes.each do |recipe| %>
      <tr>
        <td><%= recipe.title %></td>
        <td><%= recipe.content %></td>
        <td><%= link_to '詳細', recipe %></td>
        <td><%= link_to '編集', edit_recipe_path(recipe) %></td>
        <td><%= link_to '削除', recipe, method: :delete, data: { confirm: '本当に削除しても良いですか？' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Recipe', new_recipe_path %>
